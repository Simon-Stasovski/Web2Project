<body>
  {{#if AlertMessage}}
    {{message}}
  {{/if}}
  <form action="/loginUser" method="post" role="form">
    <legend>Please enter your username and password to login</legend>
    <label for="username">Username:</label><br />
    <input type="text" id="username" name="username" required /><br />
    <label for="password">Password:</label><br />
    <input
      type="password"
      id="password"
      name="password"
      minlength="8"
      required
    />
    <button type="submit" class="btn btn-primary">Login</button>
    <br/>
  </form>
  <form action="/create" method="get" role="form">
    <button type="submit" class="btn btn-primary">Or create a new account</button>
  </form>
</body>